# Kodiak Configuration Example
# Copy this file to .env and configure your settings

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Model configuration using LiteLLM format (provider/model)
# See https://docs.litellm.ai/docs/providers for all supported models
KODIAK_LLM_MODEL=gemini/gemini-3-pro-preview

# API Keys (set the one for your chosen provider)
GOOGLE_API_KEY=your_google_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
KODIAK_LLM_TEMPERATURE=0.1
KODIAK_LLM_MAX_TOKENS=4096

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

POSTGRES_SERVER=localhost
POSTGRES_USER=kodiak
POSTGRES_PASSWORD=kodiak_password
POSTGRES_DB=kodiak_db
POSTGRES_PORT=5432

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode
KODIAK_DEBUG=false
KODIAK_LOG_LEVEL=INFO

# Security settings
KODIAK_ENABLE_SAFETY=true
KODIAK_MAX_AGENTS=5

# Tool settings
KODIAK_TOOL_TIMEOUT=300
KODIAK_ENABLE_HIVE_MIND=true

# TUI Configuration
KODIAK_TUI_COLOR_THEME=dark
KODIAK_TUI_REFRESH_RATE=10

